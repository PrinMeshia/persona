        "public_js": "{path.asset}js/",
        "public_css": "{path.asset}css/",
        "public_img": "{path.asset}img/"
    },
    "routing": {
        "path": "{path.config}route.json"
    },
    "userparam": {
        "path": "{path.config}user.json"
    },
    "namespace": {
        "src": "src\\",
        "module": "{namespace.src}module\\",
        "model": "{namespace.src}model\\"
    },
    "messages": {
        "e404": "La page que vous recherchez n'existe pas",
        "maintenance": "Maintenance du site en cours"
    },
    "maintenance": {
        "path": "{path.code_info}/maintenance"
