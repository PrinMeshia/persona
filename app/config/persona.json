{
    "website": {
        "title": "Persona Framewok",
        "description": "Persona Framewok",
        "version": "1.0.0",
        "author": "Prin-Meshia",
        "lang": "fr-FR",
        "keywords": ""
    },
    "system": {
        "language": "fr-fr",
        "timezone": "Europe/Paris",
        "maintenance" : true,
        "template_ext" : ".tpl"
    },
    "fixedpath":{
        "app": "/app/",
        "src": "/src/"
    },
    "path": {
        "tmp": "/tmp/",
        "vendor": "{fixedpath.app}vendor/",
        "module": "{fixedpath.src}module/",
        "model": "{fixedpath.src}model/",
        "config": "{fixedpath.app}config/",
        "environment": "{path.config}environment/",
        "public" : "/approot/",
        "public_tpl" : "{path.public}tpl/",
        "code_info" : "{path.public}info/",
        "asset" : "{path.public}rsc/",
        "public_js" : "{path.asset}js/",
        "public_css" : "{path.asset}css/",
        "public_img" : "{path.asset}img/"
    },
    "namespace": {
        "src": "src\\",
        "module": "{namespace.src}module\\"
    },
    "routing": {
        "path": "{path.config}route.json"
    },
    "userparam": {
        "path": "{path.config}user.json"
    },
    "messages": {
        "e404": "La page que vous recherchez n'hesiste pas",
        "e503": "Site en construction"
    },
    "layout": {
        "path": "{path.public_tpl}default"
    },
    "class":{
        "cache" : "app\\persona\\cache\\Cache",
        "abstractcontroller" : "app\\persona\\controller\\AbstractController",
        "controller" : "app\\persona\\controller\\Controller",
        "debug" : "app\\persona\\debug\\Debug",
        "response" : "app\\persona\\http\\Response",
        "logger" : "app\\persona\\logger\\Logger",
        "request" : "app\\persona\\request\\Request",
        "router" : "app\\persona\\route\\Router",
        "route" : "app\\persona\\route\\Route",
        "session" : "app\\persona\\session\\Session",
        "view" : "app\\persona\\view\\View",
        "template" : "app\\persona\\view\\Template",
        "environment" : "app\\persona\\config\\Environment",
        "database" : "app\\persona\\database\\Database",
        "pdo" : "app\\persona\\database\\PdoDB",
        "querybuilder" : "app\\persona\\database\\QueryBuilder"
    }



}